{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "paths": {
            "root/*": ["./*"],
            "data/*": ["data"],
            "apps/*": ["gui/apps"],
            "assets/*": ["gui/assets"],
            "components/*": ["gui/components/*"],
            "css/*": ["gui/css/*"],
            "libs/*": ["gui/libs/*"]
        },
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["gui", "**/*.config.ts", "**/tools/scripts/*.ts"]
}
