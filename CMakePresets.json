{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "release",
            "displayName": "Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
            },
            "environment": {}
        },
        {
            "name": "cl",
            "displayName": "Release (MSVC)",
            "inherits": "release",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "clang",
            "displayName": "Release (Clang)",
            "inherits": "release",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
            },
            "environment": {}
        },
        {
            "name": "clDebug",
            "displayName": "Debug (MSVC)",
            "inherits": "debug",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "clangDebug",
            "displayName": "Debug (Clang)",
            "inherits": "debug",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release",
            "displayName": "Release",
            "configurePreset": "release"
        },
        {
            "name": "cl",
            "displayName": "Release (MSVC)",
            "configurePreset": "cl"
        },
        {
            "name": "clang",
            "configurePreset": "Release Clang"
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "configurePreset": "debug"
        },

        {
            "name": "clDebug",
            "displayName": "Debug (MSVC)",
            "configurePreset": "clDebug"
        },

        {
            "name": "clangDebug",
            "displayName": "Debug (Clang)",
            "configurePreset": "clangDebug"
        }
    ]
}
