{
    "name": "airglow",
    "fullname": "Airglow",
    "description": "Split screen browser for Windows",
    "version": "1.7.5",
    "private": true,
    "type": "module",
    "scripts": {
        "check": "tsc",
        "dev": "vite",
        "host": "vite --host",
        "build": "tsc && vite build",
        "watch": "tsc && vite build --watch",
        "preview": "vite preview",
        "manifest": "tsc --project tsconfig.node.json && node --no-warnings=ExperimentalWarning tools/manifest.js"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@types/node": "^20.14.11",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "autoprefixer": "^10.4.19",
        "colorjs.io": "^0.5.2",
        "postcss": "^8.4.39",
        "postcss-load-config": "^6.0.1",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "tailwindcss": "^3.4.6",
        "typescript": "^5.5.3",
        "vite": "^5.3.4"
    }
}
